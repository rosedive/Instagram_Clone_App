
<h1>Posts</h1>

<table >
  <thead>
    <tr class = "table-info">
      <th>Description</th>
      <th>Image</th>
      <th>User</th>
      <th colspan = 3>More actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr class = "table-active">
        <td><%= post.description %></td>
        <td><%= image_tag post.image.url, class: 'img-fluid img-thumbnail' %></td>
        <td><%= post.user.email %>
        <% if post.user.profile.present? %>
          <br><p><%= image_tag post.user.profile.image.url, class:"rounded-circle", style: 'width:50px;height:50px;' %></p></td>
        <% end %>
        <% if user_signed_in? %>
        <td><%= link_to 'Show', post,class: 'btn btn-primary' %></td>
        <% end %>
        <% if post.user == current_user %>
        
        <td><%= link_to 'Edit', edit_post_path(post), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class:'btn btn-secondary' %>
